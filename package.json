{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "yarn": "1.12.3",
    "node": "10.15.3"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "git clean -Xdf --exclude=\"!.env\"",
    "clean:dry": "git clean -Xdn --exclude=\"!.env\"",
    "test": "lerna run --stream test",
    "test:ci-non-playground": "lerna run --ignore @counterfactual/playground --ignore @counterfactual/simple-hub-server --ignore @counterfactual/dapp-tic-tac-toe --ignore @counterfactual/dapp-high-roller --stream --concurrency 1 test",
    "lint": "lerna run lint --parallel --no-bail",
    "lint:fix": "lerna run lint:fix --parallel --no-bail",
    "run:playground": "lerna run start --parallel --scope=**/playground --scope=**/simple-hub-server --scope=**/dapp-high-roller --scope=**/dapp-tic-tac-toe",
    "publish": "lerna publish --yes from-package patch",
    "postinstall": "patch-package"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels"
  ],
  "devDependencies": {
    "lerna": "3.16.1",
    "patch-package": "6.1.2",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.18.2",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  },
  "resolutions": {
    "**/tslint-microsoft-contrib": "^6.0.0",
    "browserslist": "4.6.2",
    "caniuse-lite": "1.0.30000974"
  }
}
