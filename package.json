{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "1.12.3",
    "node": "10.15.3"
  },
  "scripts": {
    "build": "lerna run build --ignore @counterfactual/wallet-ui && lerna run build --scope=**/wallet-ui",
    "clean": "git clean -Xdf --exclude=\"!.env\"",
    "clean:dry": "git clean -Xdn --exclude=\"!.env\"",
    "test": "lerna run --stream --concurrency 1 test",
    "test:e2e": "node e2e-run.js",
    "test:ci-non-playground": "lerna run --ignore @counterfactual/greenboard --ignore @counterfactual/playground --ignore @counterfactual/simple-hub-server --ignore @counterfactual/dapp-tic-tac-toe --ignore @counterfactual/dapp-high-roller --stream --concurrency 1 test",
    "lint": "lerna run lint --parallel --no-bail",
    "lint:fix": "lerna run lint:fix --parallel --no-bail",
    "run:playground": "lerna run start --parallel --scope=**/playground --scope=**/simple-hub-server --scope=**/dapp-high-roller --scope=**/dapp-tic-tac-toe",
    "run:wallet": "lerna run start --parallel --scope=**/simple-hub-server --scope=**/wallet-ui",
    "run:wallet:e2e": "lerna run start:e2e --parallel --scope=**/simple-hub-server --scope=**/wallet-ui",
    "run:dapps": "lerna run start --parallel --scope=**/dapp-high-roller --scope=**/dapp-tic-tac-toe",
    "run:bots": "lerna run start --parallel --scope=**/high-roller-bot --scope=**/tic-tac-toe-bot",
    "publish": "lerna publish --yes from-package patch",
    "postinstall": "patch-package"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels"
  ],
  "devDependencies": {
    "lerna": "3.16.4",
    "patch-package": "6.1.2",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.18.2",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  },
  "resolutions": {
    "**/tslint-microsoft-contrib": "^6.0.0"
  }
}
