{
  "name": "@counterfactual/node",
  "version": "0.0.1",
  "main": "dist/index.js",
  "iife": "dist/index.iife.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b && rollup -c",
    "test": "tsc -b && jest --runInBand --detectOpenHandles --bail",
    "test:coverage": "tsc -b && jest --runInBand --detectOpenHandles --bail --coverage",
    "lint:fix": "tslint -c tslint.json -p . --fix",
    "lint": "tslint -c tslint.json -p ."
  },
  "devDependencies": {
    "@firebase/app-types": "^0.3.2",
    "@types/dotenv": "^6.1.0",
    "@types/node": "^10.9.3",
    "cuid": "^2.1.4",
    "dotenv": "^6.1.0",
    "ethers": "4.0.20",
    "firebase": "^5.6.0",
    "firebase-server": "^1.0.1",
    "jest": "^23.6.0",
    "rollup": "^0.68.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "@counterfactual/cf.js": "0.0.1",
    "@counterfactual/machine": "0.0.1",
    "@counterfactual/types": "0.0.1",
    "eventemitter3": "^3.1.0",
    "uuid": "^3.3.2"
  },
  "config": {
    "unlockedAccount0": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257a",
    "unlockedAccount1": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257b"
  },
  "jest": {
    "bail": true,
    "cacheDirectory": "jest-cache",
    "coverageDirectory": "jest-coverage",
    "coveragePathIgnorePatterns": [
      "test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "rootDir": ".",
    "roots": [
      "test"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": false
  }
}
