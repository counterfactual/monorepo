{
  "name": "@counterfactual/contracts",
  "version": "0.0.2",
  "description": "Smart contracts for Counterfactual",
  "license": "MIT",
  "files": [
    "build",
    "contracts",
    "networks"
  ],
  "scripts": {
    "build": "truffle compile --all && tsc -b",
    "migrate": "truffle migrate --reset --network ganache",
    "test": "tsc -b && truffle test --network ganache $npm_package_config_testFiles",
    "clean": "shx rm -rf dist build",
    "lint:fix": "yarn lint:ts:fix && yarn lint:sol:fix",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "lint:sol": "solium -d .",
    "lint:ts:fix": "yarn lint --fix",
    "lint:ts": "tslint -c tslint.json -p .",
    "precommit": "lint-staged",
    "testfiles": "yarn build && yarn truffle:testfiles",
    "test:circleci": "yarn test",
    "test:coverage": "solidity-coverage"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint:fix",
      "git add"
    ],
    "contracts/**/*.sol": [
      "yarn lint:sol:fix",
      "git add"
    ]
  },
  "config": {
    "testFiles": "dist/test/**/*.spec.js",
    "unlockedAccount": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257d"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels",
    "solidity"
  ],
  "devDependencies": {
    "@counterfactual/typescript-typings": "0.0.1",
    "@types/bignumber.js": "5.0.0",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-string": "^1.4.1",
    "@types/node": "^10.9.3",
    "babel-eslint": "10.0.1",
    "bignumber.js": "7.2.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "chai-string": "^1.5.0",
    "decimal.js": "10.0.1",
    "eth-gas-reporter": "0.1.12",
    "ganache-cli": "^6.1.8",
    "lint-staged": "7.3.0",
    "shx": "^0.3.2",
    "solc": "^0.4.25",
    "solidity-coverage": "0.5.11",
    "solium": "1.1.8",
    "truffle": "5.0.0-beta.1",
    "truffle-deploy-registry": "^0.4.1",
    "ts-node": "^7.0.0",
    "tslint": "5.11.0",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "ethers": "^4.0.4",
    "openzeppelin-solidity": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/counterfactual/contracts.git"
  },
  "bugs": {
    "url": "https://github.com/counterfactual/contracts/issues"
  },
  "homepage": "https://github.com/counterfactual/contracts#readme"
}
