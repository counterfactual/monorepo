{
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    // Turned on as no-unused-variable in tslint.json instead
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noLib": false,
    "removeComments": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@counterfactual/typescript-typings/types"
    ],
    // @types/mocha has a duplicate conflict, this is the suggested temp fix.
    "skipLibCheck": true,
    "strict": true
  }
}
